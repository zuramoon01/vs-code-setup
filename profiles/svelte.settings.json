{
  "editor.codeActionsOnSave": {
    "source.sortImports": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.wordWrap": "on",

  "workbench.editor.customLabels.patterns": {
    "**/+page.svelte": "${dirname}/page",
    "**/[[]*[a-zA-Z0-9][]]/+page.svelte": "${dirname(1)}/${dirname}/page",

    "**/+page.server.ts": "${dirname}/page.server",
    "**/[[]*[a-zA-Z0-9][]]/+page.server.ts": "${dirname(1)}/${dirname}/page.server",

    "**/+layout.svelte": "${dirname}/layout",
    "**/[[]*[a-zA-Z0-9][]]/+layout.svelte": "${dirname(1)}/${dirname}/layout",

    "**/+layout.server.ts": "${dirname}/layout.server",
    "**/[[]*[a-zA-Z0-9][]]/+layout.server.ts": "${dirname(1)}/${dirname}/layout.server",

    "**/+server.ts": "${dirname}/server",
    "**/[[]*[a-zA-Z0-9][]]/+server.ts": "${dirname(1)}/${dirname}/server"
  },
  "workbench.editor.labelFormat": "short",
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.reduceMotion": "on",
  "workbench.sideBar.location": "right",

  "window.commandCenter": false,
  "window.titleSeparator": " | ",

  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  "search.defaultViewMode": "tree",

  "scm.compactFolders": false,
  "scm.defaultViewMode": "tree",

  "emmet.triggerExpansionOnTab": true,

  "prettier.printWidth": 100,
  "prettier.singleAttributePerLine": true,
  "prettier.trailingComma": "all",

  "svelte.enable-ts-plugin": true
}
